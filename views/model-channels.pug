div
    .card
        ul.list-group.list-group-flush
            each channel in channels
                a.list-group-item.bg-dark.text-white.d-flex(href='#' onClick=`tuneChannel("${channel.number}"${(tuner) ? ', "' + tuner + '"' : ', undefined'}${(!digital && tuner && channel.supportedDevices.indexOf(tuner) === -1) ? ', true' : ', false'});`)
                    .col.p-0
                        | #{channel.name}
                    .col-auto.p-0
                        if (!digital && tuner && channel.supportedDevices.indexOf(tuner) === -1)
                            .badge.bg-warning.text-monospace.text-black.me-1
                                i.fas.fa-exclamation-triangle.pe-1
                                | Manual
                        .badge.bg-white.text-monospace.text-black.me-1
                            | #{channel.number}

